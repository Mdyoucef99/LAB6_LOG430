package "reporting-service" {
  package "domain" {
    class Produit
    class Sale
    class SaleReport
    class Store
    Sale "*" -- "1" Produit
    Sale "*" -- "1" Store
    SaleReport "*" -- "1" Store
  }
  package "infrastructure" {
    class ProduitDao
    class SaleDao
    class StoreDao
    ProduitDao ..> Produit
    SaleDao ..> Sale
    StoreDao ..> Store
  }
  package "api" {
    class ReportRestController
    ReportRestController ..> SaleReport
    ReportRestController ..> SaleDao
    ReportRestController ..> ProduitDao
    ReportRestController ..> StoreDao
  }
  package "application" {
    class ReportingApplication
  }
}

package "api-gateway" {
  class ApiGatewayApplication
}

@enduml