  package "domain" {
    class Customer
  }
  package "infrastructure" {
    class CustomerDao
    CustomerDao ..> Customer
  }
  package "api" {
    class CustomerRestController
    CustomerRestController ..> Customer
    CustomerRestController ..> CustomerDao
  }
  package "application" {
    class CustomerApplication
  }
}

