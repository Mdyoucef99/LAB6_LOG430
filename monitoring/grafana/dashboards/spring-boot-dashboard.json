            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": { "mode": "none", "group": "A" },
            "axisLabel": "count",
            "scaleDistribution": { "type": "linear" },
            "hideFrom": { "legend": false, "tooltip": false, "vis": false }
          },
          "unit": "short",
          "min": 0
        }
      }
    },
    {
      "id": 7,
      "title": " TRAFIC - Total Requests (Counter)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "increase(http_server_requests_seconds_count[1m])",
          "legendFormat": "{{method}} {{uri}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": { "mode": "none", "group": "A" },
            "axisLabel": "requests",
            "scaleDistribution": { "type": "linear" },
            "hideFrom": { "legend": false, "tooltip": false, "vis": false }
          },
          "unit": "short",
          "min": 0
        }
      }
    },
    {
      "id": 8,
      "title": " SATURATION - CPU & System Metrics",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "process_cpu_usage * 100",
          "legendFormat": "CPU Usage %",
          "refId": "A"
        },
        {
          "expr": "jvm_gc_pause_seconds_sum / jvm_gc_pause_seconds_count",
          "legendFormat": "Avg GC Pause Time",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
