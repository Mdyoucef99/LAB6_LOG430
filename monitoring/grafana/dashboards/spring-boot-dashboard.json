            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": { "mode": "none", "group": "A" },
            "axisLabel": "value",
            "scaleDistribution": { "type": "linear" },
            "hideFrom": { "legend": false, "tooltip": false, "vis": false }
          },
          "unit": "short",
          "min": 0
        }
      }
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "5s",
